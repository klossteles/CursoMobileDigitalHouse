<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/worked_hours"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtWorkedHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/worked_hours"
        android:layout_marginTop="10dp"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hour_value"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtHourValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hour_value"
        android:inputType="number"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnCalculateSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/calculate"
        android:background="@color/btnCalculateColor"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/txtVSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/salary"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="100dp"
        android:visibility="invisible"/>

</LinearLayout>