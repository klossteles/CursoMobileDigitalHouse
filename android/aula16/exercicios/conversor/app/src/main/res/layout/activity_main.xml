<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperatura_em_c"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/digite_a_temperatura"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:autofillHints="@string/digite_a_temperatura" />

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_converter"
        android:background="@color/btnConverterColor"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/txtVTemperatureConverted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/temperature_converted"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        tools:visibility="invisible"/>

</LinearLayout>